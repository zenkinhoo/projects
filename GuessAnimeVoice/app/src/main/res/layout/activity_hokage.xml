<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Hokage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/krona_one"
        android:text="Hokages"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginStart="5dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/hokages" />



    </LinearLayout>
    <View style="@style/Divider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/krona_one"
                android:text="Jutsus and Quotes:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/playHashirama1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playHashirama2"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playSarutobi1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Hashirama 1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Hashirama 2"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Sarutobi 1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/playSarutobi2"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playMinato1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playMinato2"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView711"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Sarutobi 2"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView822"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Minato 1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView922"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Minato 2"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/playTobirama1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playTobirama2"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playTobirama3"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/te"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Tobirama1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Tobirama 2"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/te2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Tobirama 3"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/playTsunade1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playMinato1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:visibility="invisible"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playKucse"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:visibility="invisible"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Tsunade 1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/t822"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </LinearLayout>
            <View
                style="@style/Divider"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/krona_one"
                android:text="Quotes:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                app:srcCompat="@drawable/back" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>