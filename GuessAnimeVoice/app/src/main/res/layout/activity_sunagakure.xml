<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Sunagakure">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/krona_one"
        android:text="Sunagakure(Hidden Sand Village)"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginStart="5dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/sunagakure" />



    </LinearLayout>
    <View style="@style/Divider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/krona_one"
                android:text="Jutsus and quotes:"
                android:textColor="#000000"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/playGaara1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playGaara2"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playGaara3"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Gaara 1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Gaara 2"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Gaara 3"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/playGaara4"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playTemari1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playTemari2"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView7121"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Gaara 4"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView822"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Temari 1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView922"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Temari 2"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/playKankuro1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playThird"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playasdf"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:visibility="invisible"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView71s1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Kankuro 1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView8222"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
