<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Otogakure">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/krona_one"
        android:text="Otogakure (Hidden Sound Village) "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginStart="5dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/otogakure" />



    </LinearLayout>
    <View style="@style/Divider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/krona_one"
                android:text="Jutsus and Quotes:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/playOrochimaru1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playOrochimaru2"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playKabuto1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Orochimaru 1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Orochimaru 2"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Kabuto 1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/playKabuto2"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playSakon1"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />

                <ImageView
                    android:id="@+id/playVisak"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:maxWidth="90dp"
                    android:maxHeight="110dp"
                    app:srcCompat="@drawable/play" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView711"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Kabuto 2"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView822"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text="Sakon 1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView922"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/krona_one"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_marginTop="10dp" />



            <ImageView
                android:id="@+id/back"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                app:srcCompat="@drawable/back" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>