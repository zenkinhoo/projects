<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cloudy"
    tools:context=".Question_15">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/krona_one"
        android:gravity="center_horizontal"
        android:text="Question 15"
        android:textColor="@color/colorFont"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="370dp"
        android:layout_height="290dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/question15" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/krona_one"
        android:gravity="center_horizontal"
        android:text="Which member of seven swordsmens of the mist had all swords ?"
        android:textColor="@color/colorFont"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/question15_correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/krona_one"
            android:text="Mangetsu Hozuki"
            android:textColor="@color/colorFont"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/question15_wrong1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/krona_one"
            android:text="Jinin Akebino"
            android:textColor="@color/colorFont"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/question15_wrong2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/krona_one"
            android:text="Kushimaru Kuriarare"
            android:textColor="@color/colorFont"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/question15_wrong3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/krona_one"
            android:text="Fuguki Suikazan"
            android:textColor="@color/colorFont"
            android:textSize="18sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrevious15"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button"
            android:fontFamily="@font/krona_one"
            android:text="Previous Question"
            android:textColor="@color/colorFont" />

        <Button
            android:id="@+id/btnNext15"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button"
            android:fontFamily="@font/krona_one"
            android:text="Submit"
            android:textColor="@color/colorFont" />
    </LinearLayout>

</LinearLayout>