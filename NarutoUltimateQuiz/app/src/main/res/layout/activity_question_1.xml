<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cloudy"
    tools:context=".Question_1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/krona_one"
        android:gravity="center_horizontal"
        android:text="Question 1"
        android:textColor="@color/colorFont"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="370dp"
        android:layout_height="290dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/question1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/krona_one"
        android:gravity="center_horizontal"
        android:text="Which chakra type is possessed by Naruto ?"
        android:textColor="@color/colorFont"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/question1_wrong1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/krona_one"
            android:text="Fire"
            android:textColor="@color/colorFont"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/question1_correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/krona_one"
            android:text="Wind"
            android:textColor="@color/colorFont"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/question1_wrong2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/krona_one"
            android:text="Lighting"
            android:textColor="@color/colorFont"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/question1_wrong3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/krona_one"
            android:text="Water"
            android:textColor="@color/colorFont"
            android:textSize="18sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNext1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:fontFamily="@font/krona_one"
            android:text="Next Question"
            android:textColor="@color/colorFont" />
    </LinearLayout>

</LinearLayout>